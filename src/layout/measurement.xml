<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/tab_contents"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/header"
                android:text="@string/measurement_greeting_title"
                android:paddingLeft="@dimen/content_margin_large"
                android:paddingRight="@dimen/content_margin_large"
                android:paddingBottom="@dimen/content_margin_large"
                />
            <TextView
                android:id="@+id/measurement_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/content_margin_large"
                android:text="@string/measurement_greeting"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingTop="@dimen/content_margin_large"
                android:paddingBottom="@dimen/content_margin"
                />

            <ImageButton
                android:id="@+id/measurement_btn"
                android:layout_width="@dimen/measurement_btn_width"
                android:layout_height="@dimen/measurement_btn_height"
                android:tint="@color/white"
                android:background="@color/darkGrey"
                app:srcCompat="@android:drawable/ic_menu_slideshow"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:contentDescription="@string/measurement_btn"
                android:layout_gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/measurement_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/content_margin_large"
                android:text="@string/measurement_info"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:paddingTop="@dimen/content_margin_large" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>